<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.uwkringwinkel.android.dekringwinkelgent.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ateljee" />

        <TextView
            android:id="@+id/bereikenText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ons bereiken?"
            android:textSize="24sp"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="8dp"
            android:textColor="#F08600"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/hometext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vlaamse kaai 10"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/locationIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/location"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/locationtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9000 Gent"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/internetIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/internet"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/internetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="http://www.uwkringwinkel.be/nl/home"
                android:layout_gravity="center_vertical"
                android:autoLink="web"/>
        </LinearLayout>

        <TextView
            android:id="@+id/openingsurenText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Openingsuren"
            android:textSize="24sp"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:textColor="#F08600"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/weekdagenText"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:text="ma - vrij"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/weekdagenUrenText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00u - 18:00u"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/zaterdagenText"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:text="za"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/zaterdagenUrenText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00u - 17:00u"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/zondagenText"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:text="zo &amp; feest"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="24dp"/>
            <TextView
                android:id="@+id/zondagenUrenText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gesloten"
                android:layout_marginBottom="24dp"/>
        </LinearLayout>

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="300dp"
            android:layout_height="200dp"
            tools:context="be.uwkringwinkel.android.googlemapstesting.MapsActivity"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>
    </LinearLayout>

</ScrollView>


